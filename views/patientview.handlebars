{{> navbar}}

<div class="container">

  <a class="waves-effect waves-light btn backButton"><i class="material-icons left">navigate_before</i>Patient Queue</a>


    <ul class="collection with-header">
        <li class="collection-header"><h4>{{firstname}} {{lastname}}</h4></li>
        <li class="collection-item">Date of birth: {{dob}}</li>
        <li class="collection-item">Symptoms: {{symptoms}}</li>
        {{#if shortbreath}}
            <li class="collection-item">Short of breath: YES</li>
        {{else}}
            <li class="collection-item">Short of breath: NO</li>
        {{/if}}
        {{#if chestpain}}
            <li class="collection-item">Chest Pain: YES</li>
        {{else}}
            <li class="collection-item">Chest Pain: NO</li>
        {{/if}}
        {{#if covidexposed}}
            <li class="collection-item">Exposed to Covid: YES</li>
        {{else}}
            <li class="collection-item">Exposed to Covid: NO</li>
        {{/if}}
    </ul>


  {{#if nursenotes}}
    <h5>Nurse Notes:</h5>

    {{#if nurseNoteEdit}}
      <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s11">
              <i class="material-icons prefix">mode_edit</i>
              <textarea id="new_nurse_note" class="materialize-textarea">{{nursenotes}}</textarea>
              <label for="new_nurse_note">Nurse Notes:</label>
            </div>
            <div class = "col s1">
              <a class="btn-floating btn-large waves-effect waves-light nursenotesNormalbtn ##607d8b blue-grey" id={{id}}><i class="material-icons">save</i></a>
            </div>
          </div>
        </form>
      </div>

      {{else}}
        <div class="row">
          <div class="col s11">
            <p>{{nursenotes}}</p>
          </div>
          <div class="col s1">
            {{!-- <i class="material-icons hoverable">edit</i> --}}
            <a class="btn-floating btn-large waves-effect waves-light nursenotesbtn ##607d8b blue-grey" id={{id}}><i class="material-icons">edit</i></a>
          </div>
        </div>
         
      {{/if}}

  {{else}}
    <h5>Add a Note:</h5>

    <div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s11">
          <i class="material-icons prefix">mode_edit</i>
          <textarea id="new_nurse_note" class="materialize-textarea">{{nursenotes}}</textarea>
          <label for="new_nurse_note">Add a New Note:</label>
        </div>
        <div class = "col s1">
          <a class="btn-floating btn-large waves-effect waves-light nursenotesNormalbtn red" id={{id}}><i class="material-icons">add</i></a>
        </div>
      </div>
    </form>
  </div>
  {{/if}}


</div>

<script src="/js/patientview.js"></script>