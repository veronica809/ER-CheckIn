<div class= "container">
   <h5>Patient List:</h5>
   {{#each patientlist}}
   <div class = "patientClick" id = {{this.dataValues.id}}>
      <ul class="collection hoverable " >
         <li class="collection-item avatar">
            {{#if dataValues.isolationrequired}}
            <img src="/images/mask.png" alt="" class="circle">
            {{else}}
               <img src="/images/clipboard.png" alt="" class="circle">
            {{/if}}
            <span class="title">Name: {{this.dataValues.firstname}} {{this.dataValues.lastname}}</span>
            <p>Symptoms: {{this.dataValues.symptoms}} <br>
               created_at: {{this.dataValues.createdAt}}
            </p>
            {{#if dataValues.urgent}}
               <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
            {{/if}}

      </ul>
   </div>
   {{/each}}
</div>
<script src = "/js/patientQueue.js"></script>